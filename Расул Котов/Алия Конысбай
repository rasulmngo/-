# обратный порядок
lst = [1, 2, 3, 4, 5]
reversed_lst = lst[::-1]
print(reversed_lst)  # [5, 4, 3, 2, 1]

# сортировка по убыванию 
def list_sort(lst):
    return sorted(lst, key=abs, reverse=True)
print(list_sort([1, -3, 2, -7, 5]))  # [ -7, 5, -3, 2, 1]

# меняется местами первое и последнее значение
def change(lst):
    if len(lst) >= 2:
        lst[0], lst[-1] = lst[-1], lst[0]
    return lst
print(change([1, 2, 3, 4]))  # [4, 2, 3, 1]
